
<%- include("partials/header"); -%>
    <h1>Edit</h1>
    <form class="" action="/compose" method="post">
      <div class="form-group">
        <label>Title</label>
        <input class="form-control" type="text" name="postTitle" placeholder="<%=title%>">
        <label>Post</label>
        <textarea class="form-control" name="postBody" rows="10" cols="30"> <%=content %></textarea>
        <input type="hidden" name="editedId" value="<%= id%>">
      </div>
        <button class="btn btn-default" type="submit" name="button">Publish</button>
    </form>

<%- include("partials/footer"); -%>
